{
	"compilerOptions": {
		/* Visit https://aka.ms/tsconfig.json to read more about this file */
		"strict": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"alwaysStrict": true,
		"target": "es2019",
		"lib": ["ESNext", "DOM"],
		"module": "CommonJS",
		"removeComments": true,
		"outDir": "dist",
		"incremental": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"]
}
